/*
    Assignment Statement Test #2 

    This tests all non-simple assignment operators 
    for Int, Real, and String variables.

    Output:
        a = 3 
        b = -1 
        c = 6
        d = 1
        e = 1 
        f = 36

        g = 3.0
        h = -1.0
        i = 6.00
        j = 1
        k = 1.0
        l = 36.00

        worldhello 
*/

// Ints 
def a:Int = 1
def b:Int = 2
def c:Int = 3
def d:Int = 4
def e:Int = 5
def f:Int = 6

set a += 2
set b -= 3
set c *= 2
set d /= 4
set e %= 2
set f **= 2

cout << 'a = ' << a  
cout << 'b = ' << b  
cout << 'c = ' << c  
cout << 'd = ' << d  
cout << 'e = ' << e  
cout << 'f = ' << f  << endl 

// Reals 
def g:Real = 1.0
def h:Real = 2.0
def i:Real = 3.0
def j:Real = 4.0
def k:Real = 5.0
def l:Real = 6.0

set g += 2.0
set h -= 3.0
set i *= 2.0
set j /= 4.0
set k %= 2.0
set l **= 2.0

cout << 'g = ' << g  
cout << 'h = ' << h  
cout << 'i = ' << i  
cout << 'j = ' << j  
cout << 'k = ' << k  
cout << 'l = ' << l << endl 

// Strings 
def m:String = 'hello'
set m += ' world'
cout << m 

